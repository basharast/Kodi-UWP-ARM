			<posy>0</posy>
			<height>80</height>
			<font>font24_title</font>
			<textcolor>white</textcolor>
			<texturefocus>list_focus.png</texturefocus>
			<texturenofocus></texturenofocus>
			<textoffsetx>20</textoffsetx>
