<keyboardlayouts>
  <layout language="Persian" layout="QWERTY">
    <keyboard>
      <row>۱۲۳۴۵۶۷۸۹۰</row>
      <row>جحخهعغفقثصض</row>
      <row>گکمنتالبیسش</row>
      <row>وپدذرزطظژچ.</row>
    </keyboard>
    <keyboard modifiers="shift">
      <row>1234567890</row>
      <row>\|{}ّ[]</row>
      <row>؛:«»ةآأإيئؤ</row>
      <row>/<>؟ٰك</row>
    </keyboard>
    <keyboard modifiers="symbol,shift+symbol">
      <row>)!@#$%^&amp;*(</row>
      <row>[]{}-_=+;:</row>
      <row>'",.&lt;&gt;/?\|</row>
      <row>`~؟</row>
    </keyboard>
  </layout>
</keyboardlayouts>
